{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "TerraformStateLockHeartbeatAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Scan",
        "dynamodb:DescribeTable"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-1:*:table/terraform-state-locks"
      ],
      "Condition": {
        "StringEquals": {
          "dynamodb:LeadingKeys": [
            "terraform-heartbeat-monitor"
          ]
        }
      }
    },
    {
      "Sid": "TerraformStateLockScanAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:Scan",
        "dynamodb:DescribeTable"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-1:*:table/terraform-state-locks"
      ]
    },
    {
      "Sid": "TerraformStateLockCleanupAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:DeleteItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-1:*:table/terraform-state-locks"
      ],
      "Condition": {
        "ForAllValues:StringLike": {
          "dynamodb:Attributes": [
            "LockID",
            "Timestamp",
            "ISOTimestamp",
            "Type",
            "Status"
          ]
        }
      }
    }
  ]
}