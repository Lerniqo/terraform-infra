# Terraform State Lock Heartbeat Configuration
# Configuration file for heartbeat monitoring

# AWS Configuration
AWS_REGION=us-east-1
TABLE_NAME=terraform-state-locks

# Heartbeat Configuration
HEARTBEAT_INTERVAL=30           # Heartbeat update interval in seconds
LOCK_TIMEOUT=300               # Consider lock stale after this many seconds
HEARTBEAT_LOCK_ID=terraform-heartbeat-monitor

# Monitoring Configuration
ENABLE_STALE_LOCK_CLEANUP=false    # Set to true to auto-remove stale locks (DANGEROUS)
LOG_LEVEL=INFO                     # DEBUG, INFO, WARN, ERROR
MAX_LOG_SIZE=10M                   # Maximum log file size

# Alerting Configuration (optional - for future use)
# SLACK_WEBHOOK_URL=
# EMAIL_ALERT=
# ALERT_ON_STALE_LOCKS=true

# Service Configuration
SERVICE_USER=terraform
SERVICE_GROUP=terraform
PID_FILE=/var/run/terraform-heartbeat.pid
LOG_FILE=/var/log/terraform-heartbeat.log